<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/quranmemorizer/db" VERSION="2024010800" COMMENT="XMLDB file for Quran Memorizer plugin">
    <TABLES>
        <TABLE NAME="local_quranmemorizer_suras" COMMENT="Table to store Sura information">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" COMMENT="Unique ID for each Sura"/>
                <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Name of the Sura"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <TABLE NAME="local_quranmemorizer_ayas" COMMENT="Table to store Ayas (verses) of each Sura">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" COMMENT="Unique ID for each Aya"/>
                <FIELD NAME="sura_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" COMMENT="ID of the Sura this Aya belongs to"/>
                <FIELD NAME="text" TYPE="text" NOTNULL="true" COMMENT="Text of the Aya"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="sura_id" TYPE="foreign" FIELDS="sura_id" REFTABLE="local_quranmemorizer_suras" REFFIELDS="id"/>
            </KEYS>
        </TABLE>

        <TABLE NAME="local_quranmemorizer_audio" COMMENT="Table to store audio file paths for each Sura">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" COMMENT="Unique ID for each audio file"/>
                <FIELD NAME="sura_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" COMMENT="ID of the Sura this audio file belongs to"/>
                <FIELD NAME="audio_path" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Path to the audio file"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="sura_id" TYPE="foreign" FIELDS="sura_id" REFTABLE="local_quranmemorizer_suras" REFFIELDS="id"/>
            </KEYS>
        </TABLE>
    </TABLES>
</XMLDB>